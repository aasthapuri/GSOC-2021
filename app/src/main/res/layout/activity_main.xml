<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Facility"
        android:layout_width="288dp"
        android:layout_height="101dp"
        android:layout_below="@+id/Indvidual"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttons"
        android:backgroundTint="@color/white"
        android:text="@string/facility"
        android:textColor="@color/textcolor"
        android:textSize="14sp"

        app:backgroundTint="@color/white"
        tools:ignore="NotSibling" />
    <Button
        android:id="@+id/Indvidual"
        android:layout_width="288dp"
        android:layout_height="101dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/buttons"
        android:rotationX="0"
        android:text="@string/individual"
        android:textColor="@color/textcolor"
        app:backgroundTint="#FFFFFF"
        tools:ignore="NotSibling" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Facility"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="60dp"
        android:text="By continuing you agree to our Privacy Policies \n Data Use Policies , including our Cookie Use" />


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="430.66dp"
        android:background="@drawable/bluebg"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingRight="400dp"
        android:paddingBottom="400dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="36dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="208dp"
            android:layout_height="192dp"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="90dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@mipmap/picture" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="ESSENTIAL CARE FOR EVERY BABY"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>