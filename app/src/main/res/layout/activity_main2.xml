<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/Facility"
        android:layout_width="308dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Indvidual"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        android:background="@drawable/buttons"
        android:textAlignment="textStart"
        tools:ignore="NotSibling"
        android:layout_gravity="start" />


    <EditText
        android:id="@+id/Indvidual"
        android:layout_width="308dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="45dp"
        android:hint="Local Login Address"
        android:background="@drawable/buttons"
        android:textAlignment="textStart"
        android:layout_marginTop="380dp"
        android:textColor="@color/textcolor"
        app:backgroundTint="#FFFFFF"
        android:textSize="18sp"
        tools:ignore="NotSibling"
        android:gravity="start" />

    <Button
        android:id="@+id/SignIn"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Facility"
        android:background="@drawable/bgcolor"
        android:textColor="@color/textcolor"
        android:text="Sign In"
        app:backgroundTint="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Facility"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="100dp"
        android:text="By continuing you agree to our Privacy Policies \n Data Use Policies , including our Cookie Use" />


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/bluebg"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingRight="400dp"
        android:paddingBottom="400dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="36dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="262dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@mipmap/picture" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="ECEB"
            android:textColor="@color/white"
            android:textSize="65sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>